<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuizActivity" >

	<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

		<ImageView
		    android:id="@+id/quizImage"
		    android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
		    android:src="@drawable/a"
		    tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <TextView
	            android:id="@+id/quizText"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textSize="50sp"
	            android:textStyle="bold" />
            
            <Button
                android:id="@+id/button_quiz_next"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/button_red"
                android:gravity="top|center"
                android:text="@string/next" />

        </LinearLayout>
        
        <LinearLayout
	        android:id="@+id/LinearLayoutAnswers"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="bottom" >
	
	        <Button
	            android:id="@+id/button_answer_0"
	            style="@style/ButtonText"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_blue"
	            android:gravity="center|bottom" />
	
	        <Button
	            android:id="@+id/button_answer_1"
	            style="@style/ButtonText"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_green" />
	
	        <Button
	            android:id="@+id/button_answer_2"
	            style="@style/ButtonText"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_yellow" />
	
	        <Button
	            android:id="@+id/button_answer_3"
	            style="@style/ButtonText"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/button_purple" />
    </LinearLayout>
			
        
    </LinearLayout>

    

</RelativeLayout>