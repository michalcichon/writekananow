<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cichon.writekananow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true" >

        <!-- Splash screen -->
        <activity
            android:name="com.cichon.writekananow.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="com.cichon.writekananow.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cichon.writekananow.LearnActivity"
            android:label="@string/title_activity_learn" >
        </activity>
        <activity
            android:name="com.cichon.writekananow.QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name="com.cichon.writekananow.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
